@{

    string userName = Session["userName"] == null ? "0" : Session["userName"].ToString();
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Project Employee Assignment</title>
        @Styles.Render("~/content/header")
        @Scripts.Render("~/scripts/header")
        <link href="~/Content/cs/pea.css" rel="stylesheet" />
        <link href="~/Content/cs/pea-menu-stylesheet.css" rel="stylesheet" />
        <link href="~/Content/cs/pea-navbar-stylesheet.css" rel="stylesheet" />
    </head>
    <body class="background">

        <nav class="navbar navbar-expand-lg navbar-light fixed-top " id="mainNav">
            <div aria-live="polite" aria-atomic="true">
                <!-- Position it -->
                <div id="toast">
                    @*@Html.Partial("~/Views/Common/_PartialToastNotification.cshtml")*@
                </div>
            </div>

            <a class="logo" href="@Url.Action("DashboardPage", "Dashboard")" id="logo">
                <img alt="logo" src="~/Content/Image/task.png" class="imgsize">
            </a>

            <a class="navbar-style collapse-style" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </a>
            <div class="collapse navbar-collapse nav-style" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto" id="navbar-nav">
                    <li class="nav-item">


                        <a class="nav-link" href="@Url.Action("DashboardPage", "Dashboard")">Home</a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#" id="createANewEmployee">Create A New Employee</a>
                    </li>



                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link" href="#" id="userName">@userName</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="btnLogout">Logout</a>
                    </li>
                </ul>
            </div>



        </nav>

        <div class="container body-content shiftDown">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @RenderBody()
            }

            <div class="modal fade" id="MyModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content text-center">
                        <div class="modal-header d-block">
                            <h5 class="modal-title" id="ModalHeader"></h5>
                        </div>
                        <div class="modal-body" id="ModalBody"></div>
                        <div class="modal-footer" id="ModalFooter">
                        </div>
                    </div>
                </div>
            </div>

            @*<hr />*@
            <div id="loading-overlay" class="d-none">
                @*<div id="loading-message" class="loader"></div>
                    <div class="lds-facebook"><div class="bg-danger"></div><div class="bg-success"></div><div class="bg-primary"></div></div>*@
                <div class="loadingcenter">
                    <div class="lds-default"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                </div>
            </div>
            <footer>
                @Scripts.Render("~/scripts/footer")

                @RenderSection("scripts", required: false)
            </footer>
        </div>
        <div id="loading-overlay" class="d-none">
            @*<div id="loading-message" class="loader"></div>
                <div class="lds-facebook"><div class="bg-danger"></div><div class="bg-success"></div><div class="bg-primary"></div></div>*@
            <div class="loadingcenter">
                <div class="lds-default"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
            </div>
        </div>
        <footer></footer>
    </body>
</html>
@section scripts
{
    @Scripts.Render("~/scripts/common")
}
}
