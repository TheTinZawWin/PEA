
@{
    ViewBag.Title = "DashboardPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form role="form" class="search-filter" id="frmSRB001">

    <div id="content">

        <div class="row">

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 mb-2 mt-4">
                <div class="pr-1 pl-1">

                    <div class="card cardCorners cardBackground1 shadow p-3 border">
                        <div class="card border shadow p-1">
                            <div class="card-header cardBackground6 border p-3">
                                <div class="row">
                                    <div class="col-md-6 sm-width-100 sm-max-width-100 sm-text-center">
                                        <h3 class="font-weight-bold text-white">Employee List</h3>
                                    </div>
                                    <div class="col-md-6 sm-width-100 sm-max-width-100">
                                        <div class="d-flex justify-content-end sm-justify-content-between w-100 p-0">
                                            <div class="justify-content-end p-0 sm-btn-center">
                                                <a href="#" class="btn  btn-primary ml-auto text-center" id="createEmployee">Create a New Employee</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="p-3">


                                <div class="card shadow shadowStyle2 border border-top-0 pb-3" id="divDHBMyBookings">

                                    <div class="card-body">
                                        <div class="row p-0">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 p-0">
                                                <input type="hidden" id="hidEmployeeId" value="">
                                                <table class="table table-striped  table-hover w-100" id="tblEmployee">
                                                    <thead class="thead-light">
                                                        <tr>
                                                            <th>
                                                                <input type="checkbox" name="select_all" value="1" id="select-all" class="move-left">
                                                            </th>
                                                            <th>
                                                              EmployeeID
                                                            </th>
                                                           
                                                            <th>
                                                                Name
                                                            </th>
                                                            <th>
                                                                Email
                                                            </th>
                                                            <th>
                                                                Phone
                                                            </th>


                                                            <th>
                                                                Department
                                                            </th>
                                                            <th>
                                                                JoinDate
                                                            </th>
                                                            <th>
                                                                Active
                                                            </th>


                                                            <th>
                                                                Created By
                                                            </th>
                                                            <th>
                                                               Updated By
                                                            </th>

                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                    <tfoot>

                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class=" row col-xl-4 col-lg-4 col-sm-12 m-0 p-0">

                                            </div>
                                            <div class="row col-lg-8 col-md-12 col-sm-12 mb-2 justify-content-end">
                                               
                                                <div class="col-md-4 col-sm-12 w-50">
                                                    <button id="btnEmployeeUpdate" type="button" class="btn btn-success  w-100" data-toggle="modal" data-target="">Update</button>
                                                </div>
                                                <div class="col-md-4 col-sm-12 w-50">
                                                    <button id="btnEmployeeDelete" type="button" class="btn btn-danger  w-100" data-toggle="modal" data-target="">Delete</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                <div class="pl-1 pr-1 mt-4" id="partialviewsupportbooking">
                    <div class="card cardBackground1 left-top-reduce right-bottom-reduce shadow p-3 borders">
                        <div class="card left-top-reduce right-bottom-reduce border shadow">
                            <div class="card-header cardBackground4 left-top-reduce">
                                <div class="mt-2 ml-2">
                                    <h3 class="font-weight-bold">Employee Summary</h3>
                                </div>
                            </div>



                            <div class="card-body">
                                <div class="row m-0 p-0">
                                    <div class="rounded-circle  text-center mr-3 min-width-50 min-height-50 like-table circle">
                                        <h6 class="font-weight-bold align-middle like-table-cell" id="activeCount">0</h6>
                                    </div>
                                    <div>
                                        <h6 class=" mt-3">Active</h6>
                                    </div>
                                </div>

                                <div class="divider mt-2 mb-2"><hr></div>
                                <div class="row m-0 p-0">
                                    <div class="rounded-circle bg-light text-center mr-3 min-width-50 min-height-50 like-table circle">
                                        <h6 class="font-weight-bold align-middle like-table-cell" id="inactiveCount">0</h6>
                                    </div>
                                    <div>
                                        <h6 class=" mt-3">Inactive</h6>
                                    </div>
                                </div>
                               

                            </div>

                        </div>


                    </div>

                </div>

            </div>
          

        </div>
        <div class="modal fade bd-example-modal-lg" id="Modal-createEmployee" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    @Html.Partial("~/Views/Employee/CreateEmployee.cshtml")

                </div>
            </div>
        </div>
        <div class="modal fade bd-example-modal-lg" id="Modal-updateEmployee" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    @Html.Partial("~/Views/Employee/UpdateEmployee.cshtml")

                </div>
            </div>
        </div>
    </div>
</form>
@section scripts
{
    @Scripts.Render("~/scripts/common")
    @Scripts.Render("~/scripts/dashboard")
}
